.payRecord_main{
}
/* 搜索框 */
.cu-bar .search-form{
  background:#fff;
  margin:35rpx 0;
}
.select{
  border-left: 2px solid #E4E4E4;
  padding-left: 43rpx;
  line-height:30rpx;
}
/* 选择日期 */
.date{
  display: flex;
  justify-content: space-around;
  font-size: 20rpx;
  margin-top: 7rpx;
}
.date text{
  padding: 12rpx 16rpx;
  background:rgba(244,243,243,1);
  border-radius:21px;
  color:#666666;
}
.date .textActi{
  padding:10rpx 16rpx;
  background:rgba(236,252,242,1);
  color:#07AB50;
  border: 1rpx solid #8ad0b9
}
.select_date{
  display: flex;
  justify-content: space-around;
  margin-top: 43rpx;
  padding-bottom: 33rpx;
}
.boder-bottom{
  border-bottom: 2px solid #efefef;
  padding:0 79rpx;
  padding-bottom: 20rpx;
}
/* 详情 */
.li{
  background-color: #ffffff;
	box-shadow: 0px 2px 18px 0px rgba(121, 121, 121, 0.15);
  border-radius: 20rpx;
  width:100%;
  margin-bottom: 29rpx;
}
.title{
  font-size: 30rpx;
  color: #333333;
  padding: 20rpx 31rpx;
  border-bottom: 2px solid #efefef;
  margin-bottom: 25rpx;
  line-height: 1;
}
.detail{
  display: flex;
  padding-bottom: 20rpx;
  font-size:26rpx;
  line-height: 1;
}
.detail view:nth-child(1){
  width:21%;
  text-align: right;
  margin-right: 10rpx;
}
.detail view:nth-child(2){
  flex: 1;
}
.all_price{
  text-align: right;
}
.null{
  text-align: center;
  font-size: 35rpx;
}
