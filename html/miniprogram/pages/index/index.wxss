.index{
  height: 100%;

}
.swiper_box{
  background-repeat:no-repeat;
  background-size: 100% 295rpx;
  background-image:url(https://njbxq.mynatapp.cc/h5/imgs/index_bg.png);
}
.bg{
  height: 31rpx;
}
.swiper_box swiper{
  height: 277rpx;
  border-radius:17rpx;
  overflow: hidden;
}
.swiper_main{
  padding: 0 31rpx;
  width:100%;
  z-index:10
}
.swiper_main .screen-swiper{
  min-height:277rpx;
}
/* 公告 */
.notice{
  display: flex;
  /* padding:0 31rpx; */
  /* justify-content: space-between; */
  padding-top:39rpx;
}
.notice_img image{
  width:86rpx;
  height:43rpx;
}
.notice_main{
  width:70%
}
.notice_swiper{
  position: relative;
  height: 100%;
  padding-right: 13rpx;
  overflow: hidden;
  color:#000;
  line-height: 48rpx;
}
.item{
  white-space: nowrap;
  text-overflow: ellipsis;
}
.more{
  font-size: 24rpx;
}
/* 导航图标 */
.nav{
  padding-top: 50rpx;
  display: flex;
  padding-bottom:52rpx;
}
.nav_item{
  margin-right: 66rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.nav_item:last-child{
  padding-right: 0;
}
.nav_item text{
  color:#333333;
  font-size: 28rpx;
  padding-top:22rpx
}
.nav_item image{
  height: 122rpx;
  width:122rpx;
}
/* 热门活动 */
.hot_act{
  /* margin-top: 22rpx; */
  padding-top: 49rpx;
  border-top: 22rpx solid #fafafa;
}
.hot_title{
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  align-items: center;
  color:#323232;
  line-height: 1;
}
.hot_title view{
  font-size: 24rpx;
}
.hot_ul{
  margin-top: 48rpx;
}
.hot_li{
  box-shadow:0px 5px 7px 0px rgba(0, 0, 0, 0.13);
  border-radius: 17rpx;
  overflow: hidden;
  margin-bottom: 29rpx;
  padding-bottom:17rpx
}
.hot_li_img image{
  width:100%;
  height: 270rpx;
}
.hot_li_title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color:#474747;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.hot_li_detail{
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  padding-top: 28rpx;
  align-items: center;
}
.hot_li_detail .icon{
  font-size: 25rpx;
}
.hot_li_num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 21rpx;
}
.num_left{
  display: flex;
  align-items: center;
}
.num_img{
  margin-left: -20rpx;
}
.cu-avatar{
  width: 40rpx;
  height: 40rpx;
}
.person_num{
  padding-left: 10rpx;
}
.num_right image{
  width: 28rpx;
  height: 23rpx;
  margin-right: 12rpx;
}