<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jn.system.dao.SysDepartmentMapper">
    <resultMap id="BaseResultMap" type="com.jn.system.vo.TbSysDepartment">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="department_name" jdbcType="VARCHAR" property="departmentName"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="status" jdbcType="CHAR" property="status"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,department_name as departmentName,creator,create_time as createTime,status
    </sql>
    <sql id="Base_status">
        status = '1'
    </sql>
    <select id="findSysDepartmentById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_sys_department
        where id = #{id,jdbcType=VARCHAR}
    </select>
    <select id="findSysDepartmentAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_sys_department
        where
        <include refid="Base_status"/>
    </select>
</mapper>